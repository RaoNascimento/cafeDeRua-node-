<!DOCTYPE HTML>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">

    <title>Cafe de Rua</title>

    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <!-- <link rel="shortcut icon" href="images/favicon.ico" /> -->
</head>

<body>

    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

                <img src="images/logo.png" />
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">HOME</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="row">
        <% for(var i= 0; i<doacao.length;i++) { %>
            <div class="col-md-4">
                <div class="doacao_wrapper">

                    <a href="doacoes?idDoacao=<%= doacao[i].idDoacao %>" class="doacao_idDoacao">
                        id Doacao: <%= doacao[i].idDoacao %>
                    </a>
                    <p class="doacao_resumo">
                        id Usuario:
                        <%= doacao[i].idUsuario %>
                    </p>

                    <p class="doacao_resumo">
                        Nome:
                        <%= doacao[i].NomeUsuario %>
                    </p>
                    <p class="doacao_resumo">
                        E-mail:
                        <%= doacao[i].EmailUsuario %>
                    </p>
                    <p class="doacao_resumo">
                        Endere√ßo:
                        <%= doacao[i].EnderecoUsuario %>
                    </p>
                    <p class="doacao_resumo">
                        Whatsapp:
                        <%= doacao[i].Whatsapp %>
                    </p>
                    <p class="doacao_resumo">
                        Senha:
                        <%= doacao[i].SenhaUsuario %>
                    </p>

                    <span class="doacao_data">Data: <%= doacao[i].DataDoacao %></span>

                </div>
            </div>
            <% } %>
    </div>

    <div class="row ver_mais">
        <button type="button" class="btn btn-default"><a href="#">Add Doacao</a></button>
    </div>

    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

</body>

</html>